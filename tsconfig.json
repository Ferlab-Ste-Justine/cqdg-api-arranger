{
    "compilerOptions": {
        "esModuleInterop": true,
        "moduleResolution": "node",
        "module": "ESNext",
        "target": "ESNext",
        "sourceMap": true,
        "outDir": "dist",
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "isolatedModules": true
    },
    "exclude": ["node_modules"],
    "include": ["src"]
}
